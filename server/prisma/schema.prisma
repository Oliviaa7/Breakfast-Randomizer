generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Breakfast {
  id Int    @id @default(autoincrement())
  name String
  meals Meal[]
}

model Meal {
  id Int    @id @default(autoincrement())
  name String
  category Breakfast   @relation(fields: [breakfastId], references: [id])
  breakfastId Int
  combos Combo[]
}

model Combo {
  id Int    @id @default(autoincrement())
  name String
  meal Meal   @relation(fields: [mealId], references: [id])
  mealId Int
}